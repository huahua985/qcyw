<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qcyw.xchqcyws.mapper.MyCartMapper">
    <resultMap type="myCart" id="MyCartResult">
        <result property="cardId" column="card_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="goodsName" column="goods_name"/>
        <result property="userId" column="user_id"/>
        <result property="goodsPic" column="goods_pic"/>
        <result property="cartNum" column="cart_num"/>
        <result property="goodsPrice" column="goods_price"/>
        <result property="buyStatus" column="buy_status"/>
        <result property="goodsSpecs" column="goods_specs"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

     <select id="getMyCartList" parameterType="java.lang.String" resultMap="MyCartResult">
        select card_id, goods_id ,goods_name, user_id, goods_pic,
        cart_num, goods_price, buy_status,goods_specs
        from my_cart where user_id = #{userId} and del_flag = '1'
    </select>

    <!--user_id和create_by等用户登录搞好在加-->
    <insert id="insertMyCart" parameterType="myCart">
        insert into my_cart
        (
        <if test="cardId != null and cardId != ''">card_id,</if>
        <if test="goodsId != null and goodsId != ''">goods_id,</if>
        <if test="goodsName != null and goodsName != ''">goods_name,</if>
        <if test="goodsPic != null and goodsPic != ''">goods_pic,</if>
        <if test="cartNum != null and cartNum != ''">cart_num,</if>
        <if test="goodsPrice != null and goodsPrice != ''">goods_price,</if>
        <if test="buyStatus != null and buyStatus != ''">buy_status,</if>
        <if test="goodsSpecs != null and goodsSpecs != ''">goods_specs,</if>
        create_time,
        update_time,
        <if test="delFlag != null and delFlag != ''">del_flag</if>
        )
        values
        (
        <if test="cardId != null and cardId != ''">#{cardId},</if>
        <if test="goodsId != null and goodsId != ''">#{goodsId},</if>
        <if test="goodsName != null and goodsName != ''">#{goodsName},</if>
        <if test="goodsPic != null and goodsPic != ''">#{goodsPic},</if>
        <if test="cartNum != null and cartNum != ''">#{cartNum},</if>
        <if test="goodsPrice != null and goodsPrice != ''">#{goodsPrice},</if>
        <if test="buyStatus != null and buyStatus != ''">#{buyStatus},</if>
        <if test="goodsSpecs != null and goodsSpecs != ''">#{goodsSpecs},</if>
        sysdate(),
        sysdate(),
        <if test="delFlag != null and delFlag != ''">#{delFlag}</if>
        )
    </insert>

    <update id="updateMyCart" parameterType="myCart">
        update my_cart
        <set>
            <if test="goodsId != null and goodsId != ''">
                goods_id = #{goodsId},
            </if>
            <if test="goodsName != null and goodsName != ''">
                goods_name = #{goodsName},
            </if>
            <if test="goodsPic != null and goodsPic != ''">
                goods_pic = #{goodsPic},
            </if>
            <if test="cartNum != null and cartNum != ''">
                cart_num = #{cartNum},
            </if>
            <if test="goodsPrice != null and goodsPrice != ''">
                goods_price = #{goodsPrice},
            </if>
            <if test="buyStatus != null and buyStatus != ''">
                buy_status = #{buyStatus},
            </if>
            <if test="goodsSpecs != null and goodsSpecs != ''">
                goods_specs = #{goodsSpecs},
            </if>
            update_time = sysdate(),
            <if test="delFlag != null and delFlag != ''">
                del_flag = #{delFlag},
            </if>
        </set>
        where card_id = #{cardId}
    </update>
</mapper>
