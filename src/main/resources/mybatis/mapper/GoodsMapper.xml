<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qcyw.xchqcyws.mapper.GoodsMapper">
    <resultMap type="goods" id="GoodsResult">
        <result property="id" column="id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="goodsName" column="goods_name"/>
        <result property="sortId" column="sort_id"/>
        <result property="goodsPic" column="goods_pic"/>
        <result property="goodsNum" column="goods_num"/>
        <result property="goodsPrice" column="goods_price"/>
        <result property="goodsDetails" column="goods_details"/>
        <result property="goodsSpecs" column="goods_specs"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getGoodsList" parameterType="java.lang.String" resultMap="GoodsResult">
        select  id, goods_id ,goods_name, sort_id, goods_pic,
        goods_num, goods_price, goods_details,goods_specs
        from goods
        <where>
        <if test="goodsName != null  and goodsName != ''">and goods_name like concat('%','${goodsName}','%')</if>
        and del_flag = '1'
        </where>
    </select>

    <select id="getGoodsId" parameterType="java.lang.String" resultMap="GoodsResult">
        select  id, goods_id ,goods_name, sort_id, goods_pic,
        goods_num, goods_price, goods_details,goods_specs
        from goods where goods_id = #{goodsId} and del_flag = '1'
    </select>
</mapper>
